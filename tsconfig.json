{
    "include": ["src"],
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "importsNotUsedAsValues": "error",
        "lib": ["esnext", "es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib/",
        "paths": {
            "@oasislabs/parcel": ["src/index"],
            "@oasislabs/parcel/*": ["src/*"]
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    }
}
